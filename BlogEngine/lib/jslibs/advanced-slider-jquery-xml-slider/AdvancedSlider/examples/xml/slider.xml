<?xml version="1.0" encoding="utf-8"?>
<slider effectType="slice">

	<slide sliceEffectType="scale" horizontalSlices="6" verticalSlices="3" slicePattern="spiralCenterToMarginCW" sliceDelay="80" captionPosition="top" captionSize="35">
		<image>../presentation-assets/images/slides/image1.jpg</image>
		<thumbnail alt="Title 1" title="Some tooltip content">../presentation-assets/images/thumbnails/image1.jpg</thumbnail>
		<caption>This is just a simple caption.</caption>
	</slide>
	
	<slide effectType="fade" captionPosition="top" captionSize="35">
		<image>../presentation-assets/images/slides/image2.jpg</image>
		<thumbnail alt="Title 2" title="Some tooltip content">../presentation-assets/images/thumbnails/image2.jpg</thumbnail>
		<caption>You can set the caption's position to left, right, top or bottom.</caption>
	</slide>
	
	<slide sliceEffectType="slide" horizontalSlices="10" verticalSlices="1" slicePattern="rightToLeft" sliceDuration="700">
		<image>../presentation-assets/images/slides/image3.jpg</image>
